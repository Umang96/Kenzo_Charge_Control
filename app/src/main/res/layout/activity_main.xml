<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="umang96.kenzochargecontrol.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Rate"
        android:id="@+id/button1"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do not press the set rate button when device is plugged in, first plug out otherwise it won't work, forgive my app for being slow, it takes about 30 seconds to write values after you press the set button, so check rate only after 30 seconds."
        android:id="@+id/text_view"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Rate"
        android:id="@+id/button2"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Charge rate:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_marginLeft="120dp"
        android:layout_above="@+id/button2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_above="@+id/button1"
        android:layout_marginBottom="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button1"
        android:autoText="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author-\nUmang96 @xda"
        android:id="@+id/textView4"
        android:layout_below="@+id/text_view"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warning ! Rates above 2500 are not recommended !"
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentStart="true" />

</RelativeLayout>
